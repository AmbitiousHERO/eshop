<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="online.shixun.module.sort.dao.SortDaoMybatis">
    <select id="getAllProducts" resultType="ProductDTO">
        SELECT * from
        qsx_product
        order by price asc
    </select>

    <select id="getDllProducts" resultType="ProductDTO">
        SELECT * from
        qsx_product
        order by price DESC
    </select>

</mapper>